<% if admin_signed_in? || user_signed_in? %>
  <div id="navigate" class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <button id="hamburger" type="button" class="navbar-toggle" data-toggle="off-canvas" data-target="#sidebar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div id="right-nav" class="pull-right">
        <%= link_to root_path do %>
          <%= image_tag('TGlogo3', class: 'nav-logo') %> <font color="white" size="4">TapGuest</font>
        <% end %>
      </div>
    </div>
  </div>

  <nav id="sidebar">
    <ul id="sidebar-list" style="list-style:none;">
      <li class="name-panel">
        <% if admin_signed_in? %>
          <i class="fa fa-user fa-2x"></i> <font size="5"><%= current_admin.username %></font>
        <% end %>

        <% if user_signed_in? %>
          <i class="fa fa-user fa-2x"></i> <font size="5"><%= current_user.username %></font>
        <% end %>
      </li>

      <li class="name-panel">
        <% if admin_signed_in? %>
          <i class="fa fa-key fa-2x"></i> <font size="5">Admin</font>
        <% end %>

        <% if user_signed_in? %>
          <i class="fa fa-key fa-2x"></i> <font size="5"><%= current_user.role %></font>
        <% end %>
      </li>

      <li class="sidebar-items">
        <%= link_to dashboard_path, class: 'sidebar-links' do %>
          <i class="fa fa-dashboard"></i> Dashboard
        <% end %>
      </li>

      <li class="sidebar-items">
        <% if admin_signed_in? %>
          <%= link_to edit_admin_registration_path, class: 'sidebar-links' do %>
            <i class="fa fa-cog"></i> Account Settings
          <% end %>
        <% else %>
          <%= link_to edit_user_path(current_user), class: 'sidebar-links' do %>
            <i class="fa fa-cog"></i> Account Settings
          <% end %>
        <% end %>
      </li>

      <li class="sidebar-items">
        <%= link_to edit_location_path(@location), class: 'sidebar-links' do %>
          <i class="fa fa-cutlery"></i> Restaurant Info
        <% end %>
      </li>

      <li class="sidebar-items">
        <%= link_to edit_plan_path, class: 'sidebar-links' do %>
          <i class="fa fa-clipboard"></i> Subscription
        <% end %>
      </li>

      <li class="sidebar-items">
        <% if admin_signed_in? %>
          <%= link_to  destroy_admin_session_path, class: 'sidebar-links', method: :delete do %>
            <i class="fa fa-sign-out"></i> Log Out
          <% end %>
        <% end %>

        <% if user_signed_in? %>
          <%= link_to  logout_path, class: 'sidebar-links', method: :delete do %>
            <i class="fa fa-sign-out"></i> Log Out
          <% end %>
        <% end %>
      </li>
    </ul>
  </nav>
<% end %>
