<div class="center-block text-center">
  <%= image_tag('TGlogo2') %>
</div> <br>

<div class="form-wrapper">
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="text-center">User Log In</h3> <hr>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), role: 'form') do |f| %>

    <% if resource.errors.any? %>
      <div class="devise-errors" role="alert">
        <%= devise_error_messages! %>
      </div>
    <% end %>

      <div class="box-body">
        <div class="form-group">
          <%= f.text_field :username, placeholder: 'Username', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, placeholder: 'Password', class: 'form-control', autocomplete: "off" %>
        </div>

        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>

      </div>

      <div class="box-footer">
        <%= f.submit "Log in", class: 'btn btn-primary bottom-btn' %> <br>
        <%= link_to 'I forgot my password', '#' do %>
          <%= flash.now[:alert] = "Contact a manager to get a new password" %>
        <% end %>
        <%= link_to "Home", root_path %>
      </div>
    <% end %>
  </div>
