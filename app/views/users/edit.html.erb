<div class="center-block text-center">
  <%= image_tag('TGlogo2') %>
</div> <br>

<div class="edit-form">
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="text-center">Account Settings</h3> <hr>
    </div>

    <%= form_for(@user) do |f| %>

      <div class="box-body">
        <div class="form-group">
          <%= f.label 'First Name' %><br>
          <%= f.text_field :firstname, placeholder: 'First name', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label 'Last Name' %><br>
          <%= f.text_field :lastname, placeholder: 'Last name', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label 'Username' %>
          <%= f.text_field :username, placeholder: 'Username', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :role %> <br>
          <%= f.select :role, [['Manager','Manager'], ['Host','Host'], ['Hostess','Hostess']] %>
        </div>

        <div class="form-group">
          <%= f.label :active %> <br>
          <%= f.select :active, [['Yes', true], ['No', false]] %>
        </div>

        <div class="form-group">
          <%= f.label :email %><br>
          <%= f.email_field :email, placeholder: 'Email', class: 'form-control' %>
        </div>

        <div class="changePW form-group">
          <%= link_to 'Change Password', '#', class: 'show-fields' %>
        </div>

        <div class="hidden-fields hidden">
          <div class="form-group">
            <%= f.label 'Change password' %> <br>
            <%= f.password_field :password, placeholder: 'New Password', class: 'form-control', autocomplete: "off" %>
          </div>

          <div class="form-group">
            <%= f.label 'Confirm password change' %><br>
            <%= f.password_field :password_confirmation, placeholder: 'Confirm Password', class: 'form-control', autocomplete: "off" %>
          </div>
        </div>
      </div>

      <div class="box-footer">
        <%= f.submit 'Update', class: 'btn btn-primary' %>
      </div>
    <% end %>

    <% if admin_signed_in? %>
      <div class="box-footer">
        <h3 class="delete-acct">Delete User</h3>
        <p>Warning: Deleting an account is perminant and all saved info will be lost!</p>
         <%= button_to "Delete User", delete_user_path(@user), data: { confirm: "Are you sure?" }, class: 'btn btn-danger', method: :delete %>
      </div>
    <% end %>
  </div>
</div>
