<div class="center-block text-center">
  <%= image_tag('TGlogo2') %>
</div> <br>

<div class="form-wrapper">
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3>Change your password</h3> <hr>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

      <div class="devise-errors" role="alert">
        <%= devise_error_messages! %>
      </div>

      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.password_field :password, placeholder: 'New Password', autocomplete: "off" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, placeholder: 'Confirm Password', autocomplete: "off" %>
      </div>

      <div class="box-footer">
        <%= f.submit "Change my password", class: 'btn btn-primary bottom-btn' %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
    </div>
  </div>
