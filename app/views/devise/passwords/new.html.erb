<div class="center-block text-center">
  <%= image_tag('TGlogo2') %>
</div> <br>

<div class="form-wrapper">
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="text-center">Forgot your password?</h3> <hr>
    </div>

    <div class="box-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

        <div class="devise-errors" role="alert">
          <%= devise_error_messages! %>
        </div>

        <div class="form-group">
          <%= f.email_field :email, placeholder: 'Email', class: 'form-control' %>
        </div>
      </div>

      <div class="box-footer">
        <%= f.submit "Send Email", class: 'btn btn-primary bottom-btn' %> <br>
        <%= link_to 'Admin Log In', new_admin_session_path %> <br>
        <%= link_to 'User Log In', new_user_session_path %> <br>
        <%= link_to 'Sign up', new_admin_registration_path %>
      </div>
    <% end %>
  </div>
</div>
