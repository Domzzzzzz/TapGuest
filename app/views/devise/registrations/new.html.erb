<div class="center-block text-center">
  <%= image_tag('TGlogo2') %>
</div> <br>

<div class="form-wrapper">
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="text-center">Sign Up</h3> <hr>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), role: 'form') do |f| %>

    <% if resource.errors.any? %>
      <div class="devise-errors" role="alert">
        <%= devise_error_messages! %>
      </div>
    <% end %>

      <div class="box-body">
        <div class="form-group">
          <%= f.text_field :firstname, placeholder: 'First Name', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.text_field :lastname, placeholder: 'Last Name', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.text_field :username, placeholder: 'Username', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.email_field :email, placeholder: 'Email', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, placeholder: 'Choose Password', class: 'form-control', autocomplete: "off" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, placeholder: 'Confirm Password', class: 'form-control', autocomplete: "off" %>
        </div>

        <div class="form-group">
          Please read the
          <%= link_to 'Terms & Conditions', '#', id: 'terms-link', data: { toggle: 'modal', target: '#myModal', backdrop: 'static', keyboard: false } %>
        </div>

        <div id="terms-checkbox" class="form-group hidden">
          <%= f.check_box :terms, class: 'form-checkboxes', data: { toggle: 'toggle', size: 'mini', on: 'Yes', off: 'No' } %>
          <%= f.label :terms, 'I agree to the Terms & Conditions', class: 'checkbox-labels' %>
        </div>
      </div>

      <div class="box-footer">
        <%= f.submit "Sign Up", class: 'btn btn-primary bottom-btn' %> <br>
        <%= link_to 'I already have an account', new_admin_session_path %> <br>
        <%= link_to "Home", root_path %>
      </div>
    <% end %>
  </div>
</div>

<!-- Modal ---------------------------------------------------------------->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title text-center">Terms & Conditions</h2>
      </div>
      <div class="modal-body">
        <%= render 'pages/terms' %>
      </div>
    </div>
  </div>
</div>
