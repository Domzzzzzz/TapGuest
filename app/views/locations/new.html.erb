<div class="center-block text-center">
  <%= image_tag('TGlogo2') %>
</div> <br>

<div class="form-wrapper">
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="text-center">Restaurant Information</h3> <hr>
    </div>

    <%= form_for(@location, url: locations_path, role: 'form') do |f| %>

      <div class="box-body">
        <div class="form-group">
          <%= f.text_field :restaurant_name, placeholder: 'Restaurant Name', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.text_field :address, placeholder: 'Address', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.text_field :city, placeholder: 'City', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.text_field :state, placeholder: 'State', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.text_field :postal_code, placeholder: 'Postal Code', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.text_field :main_phone, placeholder: 'Phone Number (e.g. 1-222-333-4444)', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.text_field :website, placeholder: 'Restaurant Website (e.g. https://www.example.com)', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.text_field :position, placeholder: 'Your Position', class: 'form-control' %>
        </div>
      </div>

      <div class="box-footer">
        <%= f.submit "Submit", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
